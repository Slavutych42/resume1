{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <header>
        <div>
            <h1>{{name.firstname}} {{name.lastname}}</h1>
        </div>
        <div>
            <b>{{position}}</b>
        </div>
        <br>
        <br>
        <br>
        <div>
            <em>
                {{salary}}
            </em>
        </div>
        <br>
        <hr>
    </header>

    <main>
        <section>
            {{#with data}}
                {{> title data=summary.title}}
            {{/with}}
            <div>
                <p>
                   {{summary.text}}
                </p>
            </div>
        </section>
    {{#with experience}}
        <section>
            <div>
                <h2>{{title}}</h2>
            </div>
            <div>
                <p>{{text}}</p>
            </div>
        </section>
    {{/with}}
    </main>


    <footer>
        <hr>
        <br>

        {{#with social}}
            
            {{> link data=email}}
            {{> link data=phone}}
            {{> link data=linkedin}}

        {{/with}}
    </footer>

</div>

